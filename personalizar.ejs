        // FUN√á√ÉO DE IMPORTA√á√ÉO CORRIGIDA PARA "EXPANDIR" A ORDEM
        function parseGameExportCode(code) {
            try {
                const decodedString = atob(code.trim());
                const finalExpandedOrder = [];
                for (let i = 0; i < decodedString.length; i += 2) {
                    const buildingId = decodedString.charCodeAt(i);
                    const targetLevel = decodedString.charCodeAt(i + 1);
                    const buildingName = ID_TO_NAME[buildingId];

                    if (buildingName && targetLevel > 0) {
                        let lastKnownLevel = 0;
                        for (let j = finalExpandedOrder.length - 1; j >= 0; j--) {
                            if (finalExpandedOrder[j].building === buildingName) {
                                lastKnownLevel = finalExpandedOrder[j].level;
                                break;
                            }
                        }
                        for (let l = lastKnownLevel + 1; l <= targetLevel; l++) {
                            finalExpandedOrder.push({ building: buildingName, level: l });
                        }
                    }
                }
                if (finalExpandedOrder.length === 0) throw new Error("Nenhuma ordem de constru√ß√£o v√°lida foi encontrada no c√≥digo.");
                return finalExpandedOrder;
            } catch (e) {
                console.error("Erro ao decodificar o c√≥digo:", e);
                throw new Error("O c√≥digo fornecido √© inv√°lido ou est√° em um formato irreconhec√≠vel.");
            }
        }

        async function initialize() {
            auth.onAuthStateChanged(async (user) => {
                if (user) {
                    populateBuildingControls();
                    try {
                        allProfiles = await apiRequest('build-orders');
                        populateProfileSelect();
